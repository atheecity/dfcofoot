{% extends 'DFHomeBundle:Public:affichage-classique.html.twig' %}

{% block zoneLeft %}
	<h1>Classement</h1>
	<div class="h1-entete">
		Ligue 1
	</div>
	<!-- CSS -->
	{% stylesheets '@DFMatchBundle/Resources/public/css/match.css' %}
	<link href="{{ asset_url }}" rel="stylesheet" media="screen" />
	{% endstylesheets %}
	<div id="classement-club">
		<table class="styl">
			<thead>
				<tr>
					<th>Pos.</th>
					<th class="left">Equipe</th>
					<th>Pts</th>
					<th>J</th>
					<th>G</th>
					<th>N</th>
					<th>P</th>
					<th>Bp</th>
					<th>Bc</th>
					<th>Diff</th>
				</tr>
			</thead>
			<tbody>
			{% set i = 1 %}
			{% for position in classement %}
				<tr>
					<td class="center">{{ i }}</td>
					<td>
						<img src="{{ position.club.logo }}" alt=""/>
						<span class="nom-club">{{ position.club.nom }}</span>
					</td>
					<td class="center">{{ position.points }}</td>
					<td class="center">{{ position.journee }}</td>
					<td class="center">{{ position.victoire }}</td>
					<td class="center">{{ position.nul }}</td>
					<td class="center">{{ position.defaite }}</td>
					<td class="center">{{ position.butPour }}</td>
					<td class="center">{{ position.butContre }}</td>
					<td class="center">{{ position.diff }}</td>
				</tr>
				{% set i = i + 1 %}
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

{% block zoneRight %}
	{{ render(controller('DFBreveBundle:Public:moduleListeBreve')) }}
{% endblock %}